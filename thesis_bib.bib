author = {Madhusudhan, Nikku},
doi = {10.1088/0004-637X/758/1/36},
eprint = {1209.2412},
file = {:home/evert/Documents/Papers/Thesis/CORatioMadhudson.pdf:pdf},
issn = {15384357},
journal = {Astrophysical Journal},
keywords = {planetary systems,planets and satellites: atmospheres,planets and satellites: general,planets and satellites: individual (CoRoT-2b, WASP},
number = {1},
title = {{C/O ratio as a dimension for characterizing exoplanetary atmospheres}},
