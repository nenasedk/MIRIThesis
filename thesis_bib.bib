author = {Fisher, Chloe and Hoeijmakers, H. Jens and Kitzmann, Daniel and M{\'{a}}rquez-Neila, Pablo and Grimm, Simon L. and Sznitman, Raphael and Heng, Kevin},
eprint = {1910.11627},
file = {:home/evert/Documents/Papers/Thesis/1910.11627.pdf:pdf},
keywords = {atmospheres,planets and satellites},
pages = {1--15},
title = {{Interpreting High-Resolution Spectroscopy of Exoplanets Using Cross-Correlations and Supervised Machine Learning}},
